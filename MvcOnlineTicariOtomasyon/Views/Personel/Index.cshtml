@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td> @x.Personelid </td>     
        <td> @x.PersonelAd </td>
        <td> @x.PersonelSoyad </td>
        <td> @x.PersonelGorsel </td>
        <td> @x.Departman.DepartmanAdi </td>
        <td><a href="/Personel/PersonelGetir/@x.Personelid" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-default" 
               style="background-color:lightcoral">Detaylar</a></td>
    </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Personel Ekle</a>

